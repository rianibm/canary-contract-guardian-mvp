# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# ICP Canister Configuration
CANISTER_ID=your-canister-id-here
ICP_NETWORK=local
# ICP_NETWORK=ic  # Use this for mainnet

# Agent Configuration
AGENT_SEED=your-agent-seed-phrase-here
AGENT_NAME=CanaryGuardian
MONITORING_INTERVAL=60

# Logging Configuration
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG  # Use for detailed debugging

# Optional: Custom RPC endpoints
# ICP_RPC_URL=https://ic0.app
# BOUNDARY_NODE_URL=https://ic0.app

# Monitoring Rules Configuration
BALANCE_DROP_THRESHOLD=50
TRANSACTION_VOLUME_THRESHOLD=10
TRANSACTION_VOLUME_WINDOW=3600

# Alert Configuration
ALERT_COOLDOWN=300
MAX_ALERTS_PER_HOUR=10
