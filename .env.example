# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# ICP Canister Configuration
CANISTER_ID=your-canister-id-here
ICP_NETWORK=local
# ICP_NETWORK=ic  # Use this for mainnet

# Agent Configuration
AGENT_SEED=your-agent-seed-phrase-here
AGENT_NAME=CanaryGuardian
MONITORING_INTERVAL=60

# Agentverse Integration (Optional - for global agent discovery)
AGENTVERSE_API_KEY=your_agentverse_api_key_here

# ASI:One Model Integration (Optional - for enhanced AI responses)
ASI_MODEL_ENDPOINT=https://api.asi.one/v1/models

# Logging Configuration
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG  # Use for detailed debugging

# Optional: Custom RPC endpoints
# ICP_RPC_URL=https://ic0.app
# BOUNDARY_NODE_URL=https://ic0.app

# Monitoring Rules Configuration
BALANCE_DROP_THRESHOLD=50
TRANSACTION_VOLUME_THRESHOLD=10
TRANSACTION_VOLUME_WINDOW=3600

# Alert Configuration
ALERT_COOLDOWN=300
MAX_ALERTS_PER_HOUR=10

# Instructions for ASI:One and Agentverse:
# 1. For Agentverse: Visit https://agentverse.ai/ and create an account to get API key
# 2. For ASI:One: Visit https://asi.one/ to access the ASI Alliance model endpoints
# 3. These are optional - the agent works without them but with enhanced capabilities when enabled
